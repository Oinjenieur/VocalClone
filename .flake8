[flake8]
max-line-length = 120
exclude =
    .git,
    __pycache__,
    build,
    dist,
    venv,
    venv-fast,
    venv-myshell,
    venv-py310,
    models,
    openvoice,
    bark,
    styletts2,
    valle_x,
    spark_tts,
    .ipynb_checkpoints

# Ignorer certaines erreurs pour le code legacy
ignore = 
    # undefined name (trait√© dans le code avec des imports conditionnels)
    F821,
    # line too long
    E501,
    # import not at top
    E402
    
per-file-ignores =
    # Permettre les imports relatifs dans les fichiers __init__.py
    __init__.py:F401,F403
    # Ignorer les importations dans les fichiers de tests
    test_*.py:F401,F811 